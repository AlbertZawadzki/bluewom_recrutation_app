    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
<nav class="menu">
    {% if app.user %}
        <form method="post" action="{{ path('app_logout') }}">
            <button type="submit" class="logout-button">
